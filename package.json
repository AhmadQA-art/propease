{
  "name": "propease",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "build": "npm run build --workspaces",
    "build:frontend": "npm run build --workspace=frontend",
    "build:amplify": "cd frontend && npm ci && npm run build",
    "start": "npm run start --workspace=backend",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces",
    "deploy": "netlify deploy --prod",
    "generate-swagger": "node scripts/generate-swagger.js",
    "postman-setup": "npm run generate-swagger && node scripts/generate-postman-collection.js",
    "update-postman": "npm run generate-swagger && node scripts/update-postman.js"
  },
  "devDependencies": {
    "@esbuild/linux-x64": "^0.25.2",
    "@rollup/rollup-linux-x64-gnu": "^4.40.0",
    "concurrently": "^9.1.2"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "node-fetch": "^2.7.0",
    "react-phone-number-input": "^3.4.12",
    "react-select": "^5.10.1"
  }
}
